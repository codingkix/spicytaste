/* Variables */
//Font
main-font = "open sans", sans-serif

accent-font = "Montserrat", sans-serif

default-font-size = 1em

sm-font-size = 0.8em

lg-font-size = 1.3em

//main
html, body{
	font-family: main-font;
}

.circle-img{
	width: 120px;
	height: 120px;
	border-radius: 50%;
}

//mobile menu
.mobile-menu-container{
	height:101px;
	background-color:#FF8A65;
	color: #FFF;
}

.mobile-menu-container md-list-item{
	height: 50px;
}

.mobile-menu-container.ng-hide{
	height:0px;
}

//home 
.hero-container{
	background-image: url(https://assets0.munchery.com/assets/referral/referrals-page-hero20@2x-14ed2ae984b7fd3e9fa937352f732f5e.jpg)
	background-size: cover
	padding-bottom: 30px;
	background-color: rgba(255,255,255,0.9);
  	background-position: 50% 50%;
  	background-repeat: no-repeat;
 	overflow: auto;
 	height: 400px;
}

.hero-btn{
	margin: 0 15px;
	height: 36px;
	width: 100px;
}

.tile-grid-container md-grid-tile{
	transition: all 500ms ease-out;
}

.tile-grid-container img{
	width: 100%;
	height: 100%;
}

.tile-grid-container md-grid-tile-footer h4{
	font-weight: bold;
}

.flip-container{
	perspective: 1000;
}

.flip-container, .flipper, .front, .back{
	height: 100%;
	width: 100%;
}

.flip-container:hover .flipper, .flip-container.hover .flipper{
	transform: rotateY(180deg);
}

.flipper{
	transition: 0.8s;
	transform-style: preserve-3d;
	
	position: relative;
}

.front, .back{
	backface-visibility: hidden;
	position: absolute;
	top: 0;
	left: 0;
}

.front{
	z-index: 2;
	transform: rotateY(0deg);
}

.back{
	transform: rotateY(180deg);
}

.big-tile md-whiteframe{
	padding: 24px 32px;
}

.small-tile h3{
	font-size: sm-font-size!important;
}

.small-tile p{
	font-size: 10px!important;
}

.italic-list{
	font-family: accent-font;
	font-style: italic;
	font-color: #fff;
}

.italic-list li{
	padding: 4px 0;
}

//login dialog
.login-btn-icon{
	height: 48px;
	width: 48px;
}

.fb-btn{
	background-color:#6984b4;
	color: #FFF;
}

.login-dialog .md-button{
	margin:0;
}

.avatar {
  position: relative;
  width: 90px;
  height: 90px;
  border: 1px solid #ddd;
  border-radius: 50%;
  display: inline-block;
  overflow: hidden;
  margin: 0px;
  vertical-align: middle;
  zoom:0.70;
  transform: translateZ(0);
  -webkit-transform: scale(0.70);
  -moz-transform:scale(0.70);
}

//Profile Page
.profile-head 
	height: 100%
	& img
		width:100%

.profile-head .vertical-divider{
  	margin: 0 20px;
}

.vertical-divider{
	border-top: 0;
  	border-left: 1px solid;  
  	border-left-color: rgba(0, 0, 0, 0.3);
  	height:100%;
}

//MD
.md-button{
	border-radius: 0!important;
}

md-list{
	padding: 0;
}

.md-list-item-text span {
	margin-right: 8px;
}

//animation

.animate-show.ng-hide-add.ng-hide-add-active,
.animate-show.ng-hide-remove.ng-hide-remove-active {
  -webkit-transition: all linear 0.4s;
  transition: all linear 0.4s;
}


