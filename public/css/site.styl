.show-card{
	width:100%;
	height:100%;
	position: relative;
	overflow: hidden;

	.mask{
		width: 100%;
		height: 100%;
		position: absolute;
		overflow:hidden;
		top: 0;
		left: 0;
		opacity: 0;
		background-color: rgba(0,0,0,0.4);
		transition: all 0.4s ease-in-out;

		.md-title{
			background-color: rgba(0,0,0,0.7);
			transition: all 0.2s ease-in-out;
			color: #F2F2F2;
		}
		
		h3, p{
			color: #FFF!important;
		}
		
		md-icon{
			color: #FFF;
		}
		
		*{
			opacity: 0;
		}
	}
	
	img{
		transition: all 0.2s linear;
	}
}

.info-card{
	padding-bottom: 20px;
	
	.go-cook-btn{
