/* Variables */
//Font
main-font = "open sans", sans-serif

accent-font = "Montserrat", sans-serif

default-font-size = 1em

sm-font-size = 0.8em

lg-font-size = 1.3em

theme-color = #F27242

grey-background-color = #F4F7F8

animation(a)
	-webkit-animation: a
	-moz-animation: a
	-ms-animation: a
	-o-animation: a
	animation: a

transform(t)
	-webkit-transform: t
	-moz-transform: t
	-ms-transform: t
	-o-transform: t
	transform: t

all-ease-transition(s)
	-webkit-transition: all s ease-in
  	-moz-transition: all s ease-in
  	-ms-transition: all s ease-in
  	-o-transition: all s ease-in
  	transition: all s ease-in  	


//main
html, body{
	font-family: main-font;
	height:100%;
	margin:0;
	color: #515252;
}

.bounce{
	animation(bounce 2s infinite)
}

@keyframes bounce {
	0%, 20%, 50%, 80%, 100% {
    transform(translateY(0));
  }
	40% {
    transform(translateY(-30px));
  }
	60% {
    transform(translateY(-15px));
  }
}

