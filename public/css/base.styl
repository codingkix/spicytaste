.show-card{
	width:100%;
	height:100%;
	position: relative;
	overflow: hidden;
	border: 1px solid rgba(0,0,0,0.15);

	.mask{
		width: 100%;
		height: 100%;
		position: absolute;
		overflow:hidden;
		top: 0;
		left: 0;
		opacity: 0;
		background-color: rgba(0,0,0,0.4);
		transition: all 0.4s ease-in-out;

		.md-title{
			transition: all 0.2s ease-in-out;
			color: #F2F2F2;
		}
		
		.info-title{
			background-color: rgba(0,0,0,0.7);
		}
		
		.md-list-item-text{
			h3, p{
				color: #FFF!important;
			}
		}
		
		md-icon{
			color: #FFF;
		}
		
		*{
			opacity: 0;
		}
	}
	
	img{
		transition: all 0.2s linear;
	}
}

.info-card{
	padding-bottom: 20px;
	
	.go-cook-btn{
		margin-top: 10px;
	}
}

.show-card:hover{
	img{
		transform: scale(1.2);
	}
	.mask{
		opacity: 1;
		
		*{
			opacity: 1;
		}
	}
}

