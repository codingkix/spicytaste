		background-color: rgba(0,0,0, 0.8);
	
		img{
			opacity: 0.5;
		}	
	}
	
	&:hover .md-icon-button{
		position: absolute;
		top: 25%;
		left: 25%;
		width: 50%;
		height: 50%;
		opacity: 1;
		
		md-icon{
			color: #FFF;
			width: 100%;
			height: 100%;
		}
	}
}

.component-mask .md-icon-button{
	opacity: 0;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	margin:0;
	transition: all 0.4s ease-in-out;
}

