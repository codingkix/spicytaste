@import 'mixins'

//main
html, body{
	font-family: main-font;
	height:100%;
	margin:0;
	color: dark-font-color;
}

.warn-color{
	color: warn-color;
}

.theme-color{
	color: theme-color;
}

.accent-font{
	font-family: "Montserrat", sans-serif;
}

.bounce{
	animation(bounce 2s infinite)
}

@keyframes bounce {
	0%, 20%, 50%, 80%, 100% {
    transform(translateY(0));
  }
	40% {
    transform(translateY(-30px));
  }
	60% {
    transform(translateY(-15px));
  }
}

.initial-icon{
	height: initial;
	width: initial;
}

.light-icon{
	color: light-font-color;
}

.small-icon{
	height: icon-size; 	//24px;
	width: icon-size;
}

.medium-icon{
	width:(icon-size * 4/3);  //32px
	height:(icon-size * 4/3);
}

.normal-icon{
	width: (icon-size * 2);		//48px
	height: (icon-size * 2);
}

.big-icon{
	height: (icon-size * 8/3);   //64px;
	width: (icon-size * 8/3);
}


