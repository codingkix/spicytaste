@import 'mixins'

.recipt-share-hero{
	background-color: grey-background-color;
	background-image: url('../images/share-hero.jpg');
}

.recipt-share-hero:before{
	content: '';
	position: absolute;
	background: inherit;
	width: 100%;
	height: 100%;
	filter: blur(10px);
	-webkit-filter: blur(10px) brightness(0.55);
}
.msg-container{
	min-height: 42px;
}

.recipt-share-hero>*{
	z-index:2;
	color: light-font-color;
}

.share-recipt-form{
	max-width: 320px;
	
	input{
		color: light-font-color;
		outline:none;
		border: 0;
		border-bottom: 1px solid light-font-color;
		background:none;
		margin-bottom: 10px;
		
		&.ng-valid.ng-touched{
			border-bottom: 1px solid theme-color;
		}
		
		&.ng-invalid.ng-touched{
			border-bottom: 1px solid warn-color;
		}
	}
}

.other-login-container{
	width: 360px;
	
	.hero-btn{
		border-color: #FFF;
		color:#FFF;
		border-radius: 4px;
	}
}

.share-signUp-form{
	width: 360px;
	padding: 20px 20px 20px 0;
	
	input{
		background: none;
		outline: none;
		margin-bottom:15px;
		border: 1px solid light-font-color;
		color: light-font-color;
		text-indent:10px;
		padding: 10px 0;
	}

	md-divider{
		border-color:light-font-color;
		margin: 8px 0px 20px;
	}
	
	.solid-btn{
		background: rgba(250,250,250,0.9);
		color:dark-font-color;
		margin-bottom: 15px;
		border: 1px solid light-font-color;
		padding: 10px 0;
	}
	
	.fb-btn{
		border: 1px solid fb-theme-color;
		color: light-font-color;
		background-color: fb-theme-color;
	}
}

.share-login-form{
    width: 320px;
    padding: 20px;
    border-radius: 5px;
    position: relative;
    background-color: rgb(53, 53, 53);
    
    input{
		outline: none;
	    border: 1px solid rgba(0, 0, 0, 0.6);
	    height: 40px;
	    border-radius: 5px 5px 0px 0px;
	    width: 90%;
	    text-indent: 15px;
	    color: rgb(242, 242, 242);
	    background: rgb(36, 36, 36);
	    
	    
    }
    
    input:nth-child(2){
    	border-radius: 0 0 5px 5px;
    	margin-top:10px;
    }

    button{
	    position: absolute;
	    top: 40px;
	    right: 10px;
	    background-color: theme-color;
	    height: 60px;
	    width: 60px;
	    border-radius: 50%;
	    border: 5px solid rgb(53,53,53);
	    outline:none;
	    transition: all .2s ease;
	    
	    &:hover{
	    	transform: scale(1.2);
	    }
    }
}