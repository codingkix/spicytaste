@import "mixins"

.dish-show-hero{
	background-size: cover;
	background-position: center center;
	background-repeat: no-repeat;
	background-attachment: fixed;
	position: relative;
	background-color: grey-background-color;
	transition: background-image 2s ease-in-out;
}

.hero-mask{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,0.4);
	color: light-font-color;
	transition: left 1s ease-in-out;
}

.hero-mask.slide-right{
	left: -30%;
}

.dish-title{
	margin-top:160px;
}

.dish-blog-container{
	max-width: 680px;
	//max-height: 280px;
	min-width: 300px;
	padding: 20px 15px 10px 15px;
	border-radius: 15px;
	border: light-border;

	md-content{
		background: none;
		color:inherit;
		line-height: 1.6;
	}
}

.sticky-note-container{
	margin-top: 160px;
	margin-bottom: 20px;

	.dummy-note{
		display:none;
	}
		
	&>div{
		margin: 12px;
		position: relative;
		color: dark-font-color;
		font-family: handwriting-font;
		min-height: 10em;
		width: 12em;
		padding:20px;
		box-shadow: 5px 5px 8px rgba(0,0,0,0.7);
		transition: transform 0.2s linear;
		
		md-icon{
			position: absolute;
			width: 32px;
			height: 32px;
			top: -16px;
		}
		
		.md-title{
			font-weight:bold;
		}
	}
	
	div:nth-child(even) {
		transform: rotate(4deg);
		background-color:#FFC;
	}
	
	div:nth-child(odd){
		transform: rotate(-6deg);
		background-color:#CFC;
	}
	
	&>div:hover{
		transform: scale(1.25);
		box-shadow: 10px 10px 8px rgba(0,0,0,0.7);
		font-weight: bold;
		z-index:10;
	}
	
	ul,li{
		list-style: none;
		margin: 0;
		padding: 0;
	}
}

.difficulty-container{
	width:80%;
	margin:0px 0 20px 0;
	max-width:450px;
	min-width: 200px;
}

.small-btn{
	margin:0;
	min-width: 72px;
}

.new-comment-placeholder{
	width: 100%;
}

.current-comment-placeholder{
	margin-bottom:20px;
	width:100%;
	transition: all linear 0.5s;
	height: 130px;
	opacity: 1;
	
	md-content{
		background:none;
		color:inherit;
	}
}

.current-comment-placeholder.ng-hide{
	height: 0;
	opacity: 0;
}

.comment-container{
	position:relative;
	border: 1px solid rgba(250,250,250,0.3);
	min-height: 100px;

	img.avatar{
		position:absolute;
		left:-32px;
		top:0px;
	}
}

.comment-list-item{
	margin-bottom: 20px;	
	
	md-content{
		height:70px;
	}
}

.comment-content-container{
	padding: 8px 8px 0px 40px;
}

.comment-top-info{
	font-size: 12px;
	
	strong{
		padding-right: 15px;
		border-bottom: light-border;
	}
	
	span{
		border-bottom: light-border;	
	}

}

.all-comments-container{
	position: absolute;
	right:-30%;
	width: 30%;
	height:100%;
	top:0;
	background: rgba(0,0,0,0.8);
	color: light-font-color;
	transition: right 1s ease-in-out;
	padding:100px 10px 0px 10px;
	
	md-content{
		background:none;
		color:inherit;
	}

	>md-content{
		padding: 0px 5px 5px 25px;
		width:100%;
	}
}

.clear-comments-btn{
	width:100%;
	md-icon{
		width:32px;
		height:32px;
		color: light-font-color;
	}
}

.comment-input-container{
	border: light-border;
	padding: 5px;
	height:130px;
	
	textarea{
		color: light-font-color;
	}
}

.all-comments-container.slide-right{
	right: 0;
}