@import 'mixins'

.show-desc{
	height: 20%;
	
	p{
		line-height:1.8;
		margin: 0 auto;
		width: 80%;
	}
}

.triangle-down{
	width:0;
	height:0;
	border-style: solid;
	border-width: 40px 300px 0 300px;
	border-color: #F4F7F8 transparent transparent transparent
	margin: 0 auto;
}


.triangle-up{
	width:0;
	height:0;
	border-style: solid;
	border-width: 0 300px 40px 300px;
	border-color: transparent transparent #F4F7F8 transparent
	margin: 0 auto;
}

.show-container{
	padding-top: 30px;
	min-height: 30px;
	
	.show-item{
		height: 320px;
		width: 100%;
		
		img{
			width: 100%;
			height: 300px;
		}
		
		.left-panel, .right-panel{
			width: 400px;
		}
		
		.left-container{
			border-right: 1px solid rgba(0,0,0, 0.4);
			
			.left-panel.viewed{
				margin-right: 20%;
			}
		}
		
		.right-container{
			position: relative;
			
			.right-panel.viewed{
				margin-left:20%;
			}
			
			.show-item-tag{
				width: 120px;
				top: 120px;
				left: -60px;
				background-color: #F4F7F8;
				padding: 30px 0;
				position: absolute;
				border-radius:50%;
				margin:0;
				color: theme-color;
			}
		}
		
		.show-item-desc{
			p{
				line-height: 1.5
			}
		}
		
		.left-panel.show-item-desc h4{
			text-align: right;
		}
	}
}

.show-item .item-block
	transition: all 0.55s ease-in;
	position: relative;
	opacity: 0;
	
	&.left-panel
		left: -50%;
		
		&.viewed
			left: 0;
			opacity: 1;
		
	&.right-panel
		right: -50%;
		
		&.viewed
			right: 0;
			opacity: 1;
			
.refer-theme-thumbnail{
	height:240px;
}